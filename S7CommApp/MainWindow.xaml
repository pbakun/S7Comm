<Window x:Class="S7CommApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S7CommApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <StackPanel Margin="10" FlowDirection="LeftToRight">
        <Label Content="Value:" />
        <TextBlock x:Name="ValueDisplay" HorizontalAlignment="Center"/>
        <Button Content="Add"
                Click="AddButton_Click"
                Width="100"/>
        <Button Content="Subtract"
                Click="SubButton_Click"
                Width="100"/>
        <Button Content="Reset"
                Click="ResetButton_Click"
                Width="100"/>
    </StackPanel>
</Window>
